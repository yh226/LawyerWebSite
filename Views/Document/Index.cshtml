@model IEnumerable<LawyerWbSite.Models.Document>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Upload a Document","Index", "UploadFile")
  
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DocumentName)
        </th>
    
        <th>
            @Html.DisplayNameFor(model => model.LawyerUsername)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CaseName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           
            @Html.ActionLink(item.DocumentName, "Download", new { fileName = item.DocumentName.ToString() })
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.LawyerUsername)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CaseName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DocumentID }) |
            @Html.ActionLink("Details", "Details", new { id=item.DocumentID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DocumentID }) |
            @Html.ActionLink("Download", "Download", new { fileName = item.DocumentName.ToString() }) |
            @*@Html.ActionLink("DeleteFile", "DeleteFile", new { fileName = item.DocumentName.ToString() }) |*@
        </td>
    </tr>
}

</table>
